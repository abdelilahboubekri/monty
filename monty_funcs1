#include "monty.h"

int value;
/**
 * new_Node - it creats new node
 * @n: a value
 * Return: new node
 */
stack_t *new_Node(int n)
{
	stack_t *new = NULL;

	new = malloc(sizeof(stack_t));
	
	if (new == NULL)
	{
		ffprintf(STDERR_FILENO, "Error: malloc failed\n");
		exit(EXIT_FAILURE);
	}
	new->n = n;
	new->next = NULL;
	new->prev = NULL;

	return (new);
}

/**
 * _push - push element
 * @stack: a parameter
 * @line_number: value
 */
void _push(stack_t **stack, unsigned int line_num)
{
	stack_t *new = NULL;
	(void)line_num;

	new = new_Node(value);

	new->next = *stack;
	if (*stack != NULL)
		(*stack)->prev = new;
	*stack = new;
}

/**
 * _pall - it prints elements stack
 * @stack: parameter
 * @n: value
 * Return: no return
 */
void _pall(stack_t **stack, unsigned int n)
{
	stack_t *current = NULL;
	(void)n;

	current = *stack;

	while (current != NULL)
	{
		ffprintf(STDOUT_FILENO, "%d\n", current->n);
		current = current->next;
	}
}

/**
 * free_dlistint - Free a list.
 * @stack: the Head node.
 * Return: Nothing.
 */
void free_dlistint(stack_t *stack)
{
	stack_t *current = NULL;

	current = stack;

	if (current != NULL)
	{
		free_dlistint(current->next);
		free(current);
	}
}

/**
 * _pint - it prints the value at the top of the stack.
 * @stack: List of stack
 * @line_num: Number of the line
 */
 
void _pint(stack_t **stack, unsigned int line_num)
{
	if (!*stack || !stack)
	{
		ffprintf(STDERR_FILENO, "L%d: can't pint, stack empty\n", line_num);
		cleanStack(stack);
		exit(EXIT_FAILURE);
	}
	else
		ffprintf(STDOUT_FILENO, "%d\n", (*stack)->n);
